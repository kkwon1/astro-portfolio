---
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";

const astroPosts = await Astro.glob("./posts/astronomy/*.md");
---

<Layout title="Posts">
  <body>
    <p class="text-2xl pb-3 font-bold">2024</p>
    {
      astroPosts.map((post) => (
        <div>
          <BlogPost
            url={post.url}
            title={post.frontmatter.title}
            date={post.frontmatter.pubDate}
          />
        </div>
      ))
    }
  </body>
</Layout>
